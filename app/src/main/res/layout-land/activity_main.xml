<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/cubbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"

        android:text="x^3"
        android:textColor="@color/red"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/sqbtn"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/sqbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="x^2"

        android:textColor="@color/red"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/sqrtbtn"
        tools:layout_editor_absoluteX="5dp" />


    <Button
        android:id="@+id/sqrtbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="√"
        android:textColor="@color/red"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/perc"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/cebtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/black"
        android:text="CE"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/acbtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/ansbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="ANS"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/zerobtn"
        app:layout_constraintTop_toBottomOf="@+id/plusbtn" />

    <Button
        android:id="@+id/acbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/black"
        android:text="AC"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/delbtn"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/plusbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="+"
        android:textColor="@color/red"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/minbtn"
        app:layout_constraintTop_toBottomOf="@+id/mulbtn" />

    <Button
        android:id="@+id/minbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="–"
        android:textColor="@color/red"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/divbtn" />

    <Button
        android:id="@+id/mulbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/black"
        android:text="×"
        android:textColor="@color/red"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/divbtn"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/eqbtn"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/red"
        android:text="="
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@+id/ansbtn" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />


    <Button
        android:id="@+id/btn6"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/cebtn" />

    <Button
        android:id="@+id/point"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="."
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/zerobtn" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/delbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/black"
        android:text="DEL"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/perc"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/acbtn" />

    <Button
        android:id="@+id/zerobtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/minbtn" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/cubbtn"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/sqbtn"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/black"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/sqrtbtn"
        app:layout_constraintTop_toBottomOf="@+id/delbtn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="800dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/red"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/divbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/black"
        android:text="÷"
        android:textColor="@color/red"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/cebtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/perc"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="%"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:layout_editor_absoluteX="5dp" />

    <View

        android:id="@+id/view"
        android:layout_width="780dp"
        android:layout_height="0.5dp"

        android:layout_marginStart="30dp"

        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/cebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></View>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>