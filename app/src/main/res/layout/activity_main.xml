<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/acbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_200"
        android:text="AC"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/plusbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_200"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/minbtn" />

    <Button
        android:id="@+id/minbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_200"
        android:text="-"
        android:textSize="45dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/mulbtn" />

    <Button
        android:id="@+id/mulbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_200"
        android:text="x"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/divbtn" />

    <Button
        android:id="@+id/eqbtn"
        android:layout_width="184dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_200"
        android:text="="
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@+id/plusbtn" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="3"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />


    <Button
        android:id="@+id/btn6"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="6"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="9"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/perc" />

    <Button
        android:id="@+id/point"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="."
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/zerobtn"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="2"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/delbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="DEL"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/acbtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="5"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="8"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/delbtn" />

    <Button
        android:id="@+id/zerobtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="0"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="1"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="4"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="7"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/acbtn"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/divbtn"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_200"
        android:text="รท"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/perc"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/perc"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_200"
        android:text="%"
        android:textSize="35dp"
        app:layout_constraintStart_toEndOf="@+id/delbtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>